<div class="form">
  <div class="message">
    <h1>アカウント情報更新</h1>
  </div>

  <div class="form-field">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <div class="label"><%= f.label :Eメールアドレス %></div><br>
        <div class="content"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></div>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field">
        <div class="label"><%= f.label :パスワード %>（6文字以上）<br>
        <span>※変更がない場合は省略可</span></div><br>
        <div class="content"><%= f.password_field :password, autocomplete: "new-password" %></div>

      <div class="field">
        <div class="label"><%= f.label :パスワード（確認用） %></div><br>
        <div class="content"><%= f.password_field :password_confirmation, autocomplete: "new-password" %></div>
      </div>
  </div>

      <div class="field">
        <div class="label"><%= f.label :アカウント情報を更新するには現在ご使用されているパスワードを入力してください %></div><br>
        <div class="content"><%= f.password_field :current_password, autocomplete: "current-password" %></div>
      </div>

      <div class="field">
        <%= f.submit "アカウント情報更新", class: "submit", data: { confirm: "アカウント情報を更新します。よろしいですか？"} %>
      </div>
    <% end %>
  </div>
</div>

