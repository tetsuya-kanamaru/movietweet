<div class="login-form">
  <div class="logo-app">
    <%= image_tag "logo-app-removebg.png" %>
  </div>
  <div class="login-message">
    <h1>ログインして写真をアップしよう！</h1>
    <p>アカウントをお持ちでない方は<%= link_to "こちら", new_user_registration_path %>から作成してください。</p>
  </div>

  <div class="form-field">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <div class="label"><%= f.label :email, "Eメール アドレス" %></div>
        <div class="content"><%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input" %></div>
      </div>

      <div class="field">
        <div class="label"><%= f.label :password, "パスワード" %></div>
        <div class="content"><%= f.password_field :password, autocomplete: "current-password", class: "input" %></div>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me, class: "checkbox", id: "check" %>
          <%= f.label :remember_me, "ログイン状態を保持", class:"remember-me", for: "check" %>
        </div>
      <% end %>

      <div class="field">
        <%= f.submit "ログイン", class: "submit" %>
      </div>
    <% end %>
  </div>
</div>